<% include partials/_header %>

<div class="container">
	<div class="row mt-5">
		<div class="col-md-8">
			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Nº</th>
						<th>Nome</th>
						<th>Endereço</th>
						<th>Telefone</th>
						<th>Ações</th>
					</tr>
				</thead>
				<tbody>
					<% if (data) { %>
						<% for ( var i = 0; i < data.length; i++) { %>
						<tr>
							<td><%= (i+1) %></td>
							<td><%= data[i].name %></td>
							<td><%= data[i].adress %></td>
							<td><%= data[i].phone %></td>
							<td>
								<a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
								<a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
							</td>
						</tr>	
 
						<% }%>	
					<% } %>		
				</tbody>

			</table>

		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
						<form action="/add" method="post">
							<div class="form-group">
								<input type="text" name="name" value="" placeholder="Nome" class="form-control">
							</div>
							<div class="form-group">
								<input type="text" name="adress" value="" placeholder="Endereço" class="form-control">
							</div>
							<div class="form-group">
								<input type="text" name="phone" value="" placeholder="Telefone" class="form-control">
							</div>
							<button type="submit" class="btn btn-primary">Salvar</button>
						</form>
				</div>
			</div>
		</div>
	</div>
</div>
<% include partials/_footer %>
